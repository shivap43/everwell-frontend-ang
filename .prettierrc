{
	"overrides": [
		{
			"files": ".prettierrc",
			"options": {
				"parser": "json",
				"useTabs": true,
				"trailingComma": "none"
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript",
				"tabWidth": 4,
				"printWidth": 140,
				"trailingComma": "all",
				"bracketSpacing": true,
				"jsxBracketSameLine": true
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"tabWidth": 4,
				"proseWrap": "preserve"
			}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"useTabs": true,
				"trailingComma": "none"
			}
		},
		{
			"files": "*.scss",
			"options": {
				"parser": "scss",
				"printWidth": 140,
				"tabWidth": 4
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"printWidth": 140,
				"tabWidth": 4
			}
		}
	]
}
